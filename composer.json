{
    "name": "kanopi/drupal-starter-acquia",
    "description": "Starter for integrating with Acquia",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Sean Dietrich <sean@kanopistudios.com>",
            "role": "Developer / Architect"
        },
        {
            "name": "Paul Sheldrake <paul@kanopi.com>",
            "role": "Trouble Maker"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "acquia/memcache-settings": "^1.2",
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.5",
        "drupal/core-composer-scaffold": "^11.2",
        "drupal/core-recipe-unpack": "^11",
        "drupal/core-recommended": "^11.2",
        "drupal/core-vendor-hardening": "^11.2",
        "drupal/memcache": "^2.5",
        "drush/drush": "^13.0",
        "joachim-n/composer-manifest": "^1.0",
        "kanopi/shrubs": "^0.2.11",
        "oomphinc/composer-installers-extender": "^2.0.0"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/core-dev": "^11.2",
        "drupal/default_content": "^2.0@alpha",
        "drupal/devel": "^5.4",
        "ergebnis/composer-normalize": "^2.45",
        "mglaman/phpstan-drupal": "^2.0",
        "palantirnet/drupal-rector": "^0.21.0",
        "vincentlanglet/twig-cs-fixer": "^3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "lint-php": "find web/modules/custom web/themes/custom -not -path '*/node_modules/*' -name '*.php' -exec php -l {} \\;",
        "code-sniff-modules": "vendor/bin/phpcs --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/modules/custom ",
        "code-sniff-themes": "vendor/bin/phpcs --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/themes/custom ",
        "code-sniff": [
            "@code-sniff-modules",
            "@code-sniff-themes"
        ],
        "code-sniff-ci": [
            "@code-sniff-modules-ci",
            "@code-sniff-themes-ci"
        ],
        "code-sniff-modules-ci": "vendor/bin/phpcs --report=junit --report-file=phpcs-modules-report.xml --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml docroot/modules/custom ",
        "code-sniff-themes-ci": "vendor/bin/phpcs --report=junit --report-file=phpcs-themes-report.xml --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml docroot/themes/custom ",
        "code-fix-modules": "vendor/bin/phpcbf --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml docroot/modules/custom ",
        "code-fix-themes": "vendor/bin/phpcbf --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml docroot/themes/custom ",
        "code-fix": [
            "@code-fix-modules",
            "@code-fix-themes",
            "@rector-fix",
            "@lint-php"
        ],
        "phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=-1 web/modules/custom web/themes/custom"
        ],
        "phpstan-ci": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=-1 --error-format=junit --no-progress web/modules/custom web/themes/custom > phpstan-report.xml"
        ],
        "phpstan-ci": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=-1 --error-format=junit --no-progress docroot/modules/custom docroot/themes/custom > phpstan-report.xml"
        ],
        "rector-modules": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process web/modules/custom/ --dry-run"
        ],
        "rector-themes": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process web/themes/custom/ --dry-run"
        ],
        "rector-fix-modules": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process web/modules/custom/"
        ],
        "rector-fix-themes": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process web/themes/custom/"
        ],
        "rector-fix": [
            "@rector-fix-modules",
            "@rector-fix-themes"
        ],
        "rector-check": [
            "@rector-modules",
            "@rector-themes"
        ],
        "rector-check-ci": [
            "@rector-modules-ci",
            "@rector-themes-ci"
        ],
        "rector-modules-ci": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process docroot/modules/custom/ --dry-run --output-format=junit > rector-modules-report.xml"
        ],
        "rector-themes-ci": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process docroot/themes/custom/ --dry-run --output-format=junit > rector-themes-report.xml"
        ],
        "code-check": [
            "@phpstan",
            "@rector-modules",
            "@rector-themes",
            "@code-sniff"
        ],
        "twig-fix": [
            "@twig-fix-modules",
            "@twig-fix-themes"
        ],
        "twig-fix-modules": "vendor/bin/twig-cs-fixer lint --fix docroot/modules/custom",
        "twig-fix-themes": "vendor/bin/twig-cs-fixer lint --fix docroot/themes/custom",
        "twig-lint": [
            "@twig-lint-modules",
            "@twig-lint-themes"
        ],
        "twig-lint-modules": "vendor/bin/twig-cs-fixer lint docroot/modules/custom",
        "twig-lint-themes": "vendor/bin/twig-cs-fixer lint docroot/themes/custom",
        "twig-lint-ci": [
            "@twig-lint-modules-ci",
            "@twig-lint-themes-ci"
        ],
        "twig-lint-modules-ci": "vendor/bin/twig-cs-fixer lint docroot/modules/custom --report=junit > twig-modules-report.xml",
        "twig-lint-themes-ci": "vendor/bin/twig-cs-fixer lint docroot/themes/custom --report=junit > twig-themes-report.xml",
        "build-assets": [
            "composer install --optimize-autoloader --no-dev"
        ],
        "post-autoload-dump": [
            "[ ! -f rector.php ] && cp vendor/palantirnet/drupal-rector/rector.php . || true",
            "vendor/bin/phpcs --config-set installed_paths vendor/drupal/coder/coder_sniffer || true"
        ]
    },
    "extra": {
        "enable-patching": true,
        "installer-types": [
            "drupal-library",
            "npm-asset",
            "bower-asset",
            "cypress-support",
            "cypress-e2e"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "recipes/{$name}": ["type:drupal-recipe"],
            "tests/cypress/cypress/support/{$name}": ["type:cypress-support"],
            "tests/cypress/cypress/e2e/{$name}": ["type:cypress-e2e"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/robots.txt": false,
                "[web-root]/.gitignore": false,
                "[web-root]/sites/development.services.yml": false
            }
        },
        "patches": {

        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "phpstan/extension-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-recipe-unpack": true,
            "drupal/core-vendor-hardening": true,
            "ergebnis/composer-normalize": true,
            "joachim-n/composer-manifest": true,
            "oomphinc/composer-installers-extender": true,
            "rvtraveller/qs-composer-installer": true,
            "php-http/discovery": true,
            "ewcomposer/unpack": true,
            "tbachert/spi": false
        }
    }
}
